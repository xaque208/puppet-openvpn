client
dev <%= @dev %>
proto <%= @proto %>
<% if @connections -%>
  <%- @connections.each do | connection | -%>
    <%- %><connection>
    <%- connection.each do | key, val | -%>
       <%= key %> <%= val %>
    <%- end -%>
    <%- %></connection>
  <%- end -%>
<% else -%>
remote <%= @server %> <%= @port %>
<% end -%>
resolv-retry infinite
nobind
persist-key
persist-tun
ca <%= @ca %>
cert <%= @cert %>.crt
key <%= @cert %>.key
<% if @tls_auth_key -%>
tls-auth <%= @tls_auth_key %> 1
<% end -%>
<% if @auth != '' -%>
auth <%= @auth %>
<% end -%>
<% if @openvpn_user -%>
user  <%= @openvpn_user %>
<% end -%>
<% if @openvpn_group -%>
group <%= @openvpn_group %>
<% end -%>
<% if @ns_cert_type != '' -%>
ns-cert-type <%= @ns_cert_type %>
<% end -%>
<% if @cipher != '' -%>
cipher <%= @cipher %>
<% end -%>
<% if @compression != '' -%>
comp-<%= @compression %>
<% end -%>
verb <%= @verb %>
<% @route_ipv4.each do |route4| -%>
route <%= route4 %>
<% end -%>
<% @route_ipv6.each do |route6| -%>
route-ipv6 <%= route6 %>
<% end -%>
# custom options
<% @custom_options.each do |custom_option| -%>
<%= custom_option %>
<% end -%>
