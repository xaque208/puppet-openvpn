client
dev <%= @dev %>
proto <%= @proto %>
remote <%= @server %> <%= @port %>
resolv-retry infinite
nobind
persist-key
persist-tun
ca <%= @ca %>
cert <%= @cert %>.crt
key <%= @cert %>.key
<% if @tls_auth_key -%>
tls-auth <%= @tls_auth_key %> 1
<% end -%>
<% if @auth -%>
auth <%= @auth %>
<% end -%>
<% if @_openvpn_user -%>
user  <%= @_openvpn_user %>
<% end -%>
<% if @_openvpn_group -%>
group <%= @_openvpn_group %>
<% end -%>
<% if @ns_cert_type -%>
ns-cert-type <%= @ns_cert_type %>
<% end -%>
cipher <%= @cipher %>
<% if @compression -%>
comp-<%= @compression %>
<% end -%>
verb <%= @verb %>
# custom options
<% @custom_options.each do |custom_option| -%>
<%= custom_option %>
<% end -%>
